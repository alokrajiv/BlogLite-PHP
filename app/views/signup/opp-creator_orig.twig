                        {% for key,value in data_set %}
                            Value : {{ value }} <br />
                            <option value=" {{ key }}">{{ value }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="textarea">Address</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="address"  
                              data-rule-required="true"></textarea>
                </div>
            </div>
            <!-- Multiple Checkboxes -->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="checkboxes">What are you known for?</label>
                <div class="col-md-4">
                    <div class="checkbox">
                        <label for="checkboxes-0">
                            <input type="checkbox" name="known-for" id="checkboxes-0" value="Web Developer">
                            Web Developer
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-1">
                            <input type="checkbox" name="known-for" id="checkboxes-1" value="App Developer">
                            App Developer
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-2">
                            <input type="checkbox" name="known-for" id="checkboxes-2" value="UI/UX Designer">
                            UI/UX Designer
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-3">
                            <input type="checkbox" name="known-for" id="checkboxes-3" value="Artist">
                            Artist
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-4">
                            <input type="checkbox" name="known-for" id="checkboxes-4" value="Writer">
                            Writer
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-5">
                            <input type="checkbox" name="known-for" id="checkboxes-5" value="Entrepreneur">
                            Entrepreneur
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-6">
                            <input type="checkbox" name="known-for" id="checkboxes-6" value="Investor">
                            Investor
                        </label>
                    </div>
                    <div class="checkbox">
                        <label for="checkboxes-other">
                            <input type="checkbox" id="checkbox-other">
                            Other
                        </label>
                    </div>
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group has-feedback" id="div-other">
                <label class="col-md-4 control-label" for="textarea">Other:</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="known-for-other"></textarea>
                </div>
            </div>
            <!-- Button -->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="singlebutton">Single Button</label>
                <div class="col-md-4">
                    <button id="singlebutton" name="singlebutton" type="submit" class="btn btn-primary">SUBMIT</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>