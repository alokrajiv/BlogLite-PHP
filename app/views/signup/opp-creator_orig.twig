<div>
    <form class="form-horizontal signup_form" action="/signup/handle/" method="POST">
        <fieldset>
            <!-- Form Name -->
            <legend>Signup as an Opportunity Seeker</legend>
            <input type="hidden" name="user-type" value="2">
            <!-- Text input-->
            <div class="form-group has-feedback">
                <label for="fname" class="col-md-4 control-label">First Name:</label>
                <div class="col-md-4">
                    <input type="text" name="firstname" id="fname" class="form-control" placeholder="Enter First name" 
                           data-rule-minlength="true" 
                           data-msg-minlength="First Name has to be atleast 3 characters long" 
                           data-rule-required="true" />
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group has-feedback">
                <label for="mname" class="col-md-4 control-label">Middle Name:</label>
                <div class="col-md-4">
                    <input type="text" name="middlename" id="mname" class="form-control" placeholder="Enter Middle name" />
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group has-feedback">
                <label for="lname" class="col-md-4 control-label">Last Name:</label>
                <div class="col-md-4">
                    <input type="text" name="lastname" id="lname" class="form-control" placeholder="Enter Last name"  
                           data-rule-minlength="true" 
                           data-msg-minlength="Last Name has to be atleast 3 characters long" 
                           data-rule-required="true" />
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="textinput">Date of Birth</label>
                <div class="col-md-4">
                    <input id="textinput" name="dob" type="date" placeholder="placeholder" class="form-control input-md" 
                           data-rule-required="true" />
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Multiple Radios (inline) -->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="radios">Gender</label>
                <div class="col-md-4">
                    <label class="radio-inline" for="radios-0">
                        <input type="radio" name="gender" id="radios-0" value="1" checked="checked">
                        Male
                    </label>
                    <label class="radio-inline" for="radios-1">
                        <input type="radio" name="gender" id="radios-1" value="2">
                        Female
                    </label>
                    <label class="radio-inline" for="radios-2">
                        <input type="radio" name="gender" id="radios-2" value="3">
                        Other
                    </label>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="textinput">Username</label>
                <div class="col-md-4">
                    <input id="textinput" name="username" type="text" placeholder="placeholder" class="form-control input-md" 
                           data-rule-required="true" />
                    <div class="input-group-btn">
                        <!-- Buttons -->
                    </div>
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="textinput">e-mail</label>
                <div class="col-md-4">
                    <input id="textinput" name="email" type="text" placeholder="placeholder" class="form-control input-md" 
                           data-rule-email="true"
                           data-rule-required="true" />
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Password input-->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="passwordinput">Password</label>
                <div class="col-md-4">
                    <input id="passwd-main" name="password" type="password" placeholder="placeholder" class="form-control input-md" required="">
                    Strength:<span class="pwstrength_viewport_progress"></span> <span class="pwstrength_viewport_verdict"></span>
                </div>
            </div>
            <!-- Password input-->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="passwordinput">Repeat Password</label>
                <div class="col-md-4">
                    <input id="passwd-rpt" name="passwordrepeat" type="password"  placeholder="placeholder" class="form-control input-md" 
                           data-rule-cnfrmpswd="true" 
                           data-msg-cnfrmpswd="Password Repeat doesn't match"
                           data-rule-required="true" />
                    <span class="glyphicon form-control-feedback"></span>
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group has-feedback">
                <label class="col-md-4 control-label" for="selectbasic">Nationality</label>
                <div class="col-md-4">
                    <select id="selectbasic" name="nationality" class="form-control" 
                            data-rule-required="true" >
                        <option disabled selected value> -- select an option -- </option>
